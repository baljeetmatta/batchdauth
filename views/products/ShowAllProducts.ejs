<%-include("../header")%>
<a href="/products/create" class="btn btn-primary">Create</a>
      <table class="table table-striped">
<tr>
    <th>Image</th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th></th>
</tr>
        <% products.forEach((item)=>{%>

            <tr>
                <td><img src='<%=item.image%>' width="100" height="100"></td>
                <td><%=item.name%></td>
                <td><%=item.description%></td>
                <td><%=item.price%></td>
                <td><a href="/products/ShowProduct/<%=item._id%>">View</a>/<a href="/products/EditProduct/<%=item._id%>">Edit</a>/<a href="/products/delete/<%=item._id%>">Delete</a></td>
            </tr>

        <%})%>


        </table>

<%-include("../footer")%>